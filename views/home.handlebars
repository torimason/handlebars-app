<div class="row">
    <div class="col-md-12">
        <h1>Dallas Restaurant Tracker</h1>
        <h6>An easy way to for foodies to organize their adventures!</h6>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-12">
                <h3 id="notVisitedTitle">Need to GO!</h3>
            </div>
        </div>
        <div class="row" id="venueList">
            {{#each venueList}} {{#unless this.visited}}
            <div class="col-md-6">
                <div class="card" style="width: 18rem;" id="venueCard">
                    <div class="card-body">
                        <h5 class="card-title">{{name}}</h5>
                        <p class="card-text">{{food}}</p>
                        <p class="card-text">{{rating}}</p>
                        <button data-venueid="{{id}}" class="visitedVenue">Been There!</button>
                    </div>
                </div>
            </div>
            {{/unless}} {{/each}}
        </div>
    </div>

    <div class="col-md-6">
        <div class="row">
            <div class="col-md-12">
                <h3 id="notVisitedTitle">Been THERE, done THAT!</h3>
            </div>
        </div>
        <div class="row" id="venueList">
            {{#each venueList}} {{#if this.visited}}
            <div class="col-md-6">
                <div class="card" style="width: 18rem;" id="venueCard">
                    <div class="card-body">
                        <h5 class="card-title">{{name}}</h5>
                        <p class="card-text">{{food}}</p>
                        <p class="card-text">{{rating}}</p>
                    </div>
                </div>
            </div>
            {{/if}} {{/each}}
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h3 id="AddTitle">Add new restaurant</h3>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <form>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Name</label>
                        <input type="name" class="form-control" id="nameInput" placeholder="Venue Name">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Food Type</label>
                        <input type="text" class="form-control" id="foodInput" placeholder="Ex: American">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="my-1 mr-2" for="q1">Rating</label>
                        <select class="custom-select my-1 mr-sm-2" id="ratingInput">
                            <option selected>Choose...</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row mb-5 my-3">
                <div class="col-md-12"> <button type="submit" class="btn btn-dark btn-lg btn-block" id="addVenue">
                        Submit</button></div>
            </div>
        </form>
    </div>
</div>